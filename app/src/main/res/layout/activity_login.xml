<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cor_fundo"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login">

        <ImageView
            android:id="@+id/imgVoltar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="#B58D1F" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Entrar"
            android:textColor="@color/verde"
            android:textSize="34dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Faça login para continuar"
            android:textColor="@color/dourado"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/Edit_Text"
            android:inputType="textEmailAddress"
            android:background="@drawable/borda"
            android:drawableEnd="@drawable/ic_email"
            android:hint="Email" />

        <EditText
            android:id="@+id/edtSenha"
            style="@style/Edit_Text"
            android:inputType="textWebPassword"
            android:background="@drawable/borda"
            android:drawableEnd="@drawable/ic_lock"
            android:hint="Senha" />

        <Button
            android:id="@+id/btnLogar"
            style="@style/Button"
            android:background="@drawable/botao_redondo"
            android:text="Entrar"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtIrCadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não tem Cadastro?\n Cadastre-se Aqui"
                android:textColor="#008290"
                android:layout_marginRight="50dp"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtesqueciSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Esqueci Minha Senha"
                android:textColor="#B58D1F"
                android:textStyle="bold"
                android:textSize="17dp" />

        </LinearLayout>

</LinearLayout>