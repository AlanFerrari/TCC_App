<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cor_fundo"
    tools:context=".CadastroAdvogado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVoltar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/dourado" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Preencha os dados a abaixo para se"
            android:textColor="@color/dourado"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Cadastrar"
            android:textColor="@color/verde"
            android:textSize="32dp" />

        <EditText
            style="@style/Edit_Text"
            android:id="@+id/nomeAdvogado"
            android:inputType="textPersonName"
            android:drawableEnd="@drawable/ic_account_circle"
            android:background="@drawable/borda"
            android:hint="Nome Completo"/>

        <EditText
            android:id="@+id/email"
            style="@style/Edit_Text"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/ic_email"
            android:background="@drawable/borda"
            android:hint="Email"/>

        <EditText
            android:id="@+id/telefone"
            style="@style/Edit_Text"
            android:inputType="number"
            android:background="@drawable/borda"
            android:drawableEnd="@drawable/ic_phone_android"
            android:hint="Número do Whatsapp"/>

        <Spinner
            android:id="@+id/estadoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/style_spinner_cinza"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/cidadeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/style_spinner_cinza"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/registroOAB"
            style="@style/Edit_Text"
            android:inputType="textWebPassword"
            android:drawableEnd="@drawable/ic_baseline_work"
            android:background="@drawable/borda"
            android:hint="Número de Registro no OAB"/>

        <EditText
            android:id="@+id/senha"
            style="@style/Edit_Text"
            android:inputType="textWebPassword"
            android:drawableEnd="@drawable/ic_lock"
            android:background="@drawable/borda"
            android:hint="Crie uma senha de 8 digitos"/>

        <Button
            style="@style/Button"
            android:id="@+id/btncadastrarAdvogado"
            android:background="@drawable/botao_redondo"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>